import java.util.Scanner;
class XPattern
{
public static void main(String s[])
{
 Scanner sc=new Scanner(System.in);
 System.out.println("Enter new number":);
 int n=sc.nextInt();
 int a[][]=new int[n][n];
 for(int i=0;i<n;i++)
 {
 for(i==j || (i+j)==(n-1))
 {
 System.out.print(a[i][j]);
 else
 System.out.print("  ");
 }
 System.out.println("  ");
 }
 }
 }
